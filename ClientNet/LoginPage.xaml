<Page x:Class="ClientNet.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientNet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Border Background="#2e3137">
        <StackPanel  HorizontalAlignment="Center" Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <StackPanel HorizontalAlignment="Center" Margin="30">
                <Label Content="Username" Foreground="White" HorizontalAlignment="Center" />
                <TextBox Name="username" Background="#545d6a" Foreground="White" FontSize="18" Width="400"/>
                <Label Content="Password" Foreground="White" HorizontalAlignment="Center"/>
                <PasswordBox Name="password" Background="#545d6a" Foreground="White" FontSize="18" />
                <Label Name ="error" Content="" Foreground="White" />
            </StackPanel>
            <Button x:Name="submit" Content="Submit" Margin="60 20" Background="#545d6a" Foreground="White" Click="btnSubmitClick" Width="60" />
        </StackPanel>
    </Border>
</Page>
