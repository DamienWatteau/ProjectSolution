<Page x:Class="ClientNet.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientNet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <Label Content="Username" Foreground="White" />
            <TextBox Name="username" Background="#545d6a" Foreground="White" FontSize="18" />
            <Label Content="Password" Foreground="White" />
            <PasswordBox Name="password" Background="#545d6a" Foreground="White" FontSize="18" />
            <Button Name="submit" Content="Submit" Margin="60 10" Background="#545d6a" Foreground="White" Click="btnSubmitClick" />
            <Label Name ="error" Content="" Foreground="White" />
        </StackPanel>
    </Border>
</Page>
