<Page x:Class="ClientNet.DecryptionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientNet"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChooseFilePage">

    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Decryption" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            <StackPanel Orientation="Horizontal">
                <Label Content="File :" Foreground="White" />
                <TextBox x:Name="FileNameTextBox" Background="#545d6a" Foreground="White" FontSize="18" Width="360" />
                <Button x:Name="BrowseButton" Content="Browse a file" Background="#545d6a" Foreground="White" Height="32" Click="BrowseButton_Click" />
            </StackPanel>
            <Button Name="submit" Content="Submit" Margin="60 10" Background="#545d6a" Foreground="White" Click="Submit_Click" />
        </StackPanel>
    </Border>
</Page>
